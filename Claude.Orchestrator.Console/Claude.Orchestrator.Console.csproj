<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>claude-orchestrator</ToolCommandName>
    <PreserveCompilationContext>true</PreserveCompilationContext>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <PackageId>Claude.Orchestrator</PackageId>
    <Authors>Claude Code</Authors>
    <Description>Multi-agent workflow orchestration and context management tool for Claude Code ecosystem</Description>
    <PackageVersion Condition="'$(PackageVersion)' == ''">1.0.0-local</PackageVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.CommandLine" Version="2.0.0-beta4.22272.1" />
    <PackageReference Include="System.Text.Json" Version="9.0.1" />
    <PackageReference Include="JsonSchema.Net" Version="7.3.4" />
  </ItemGroup>

  <ItemGroup>
    <None Include="Schemas\*.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
